<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.layout.QMUIRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/qmLayou"
    android:layout_width="match_parent"
    android:layout_height="200px"
    android:layout_margin="40px"
    android:background="@color/qmui_config_color_white"
    android:orientation="vertical"
    android:padding="30px"
    app:qmui_borderColor="?attr/qmui_config_color_separator"
    app:qmui_outerNormalColor="?attr/qmui_config_color_background"
    app:qmui_showBorderOnlyBeforeL="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:src="@mipmap/ic_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
         />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:text="获取更多内容"
            android:textColor="@color/qmui_config_color_gray_5"
            android:textSize="12sp" />
    </LinearLayout>

</com.qmuiteam.qmui.layout.QMUIRelativeLayout>