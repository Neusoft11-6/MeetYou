<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200px">

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout
        android:id="@+id/layout_login"
        style="@style/minePageOption"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="30px"
        android:visibility="gone">

        <TextView
            android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/ic_portrait_boy"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="卢本伟"
            android:textColor="@color/gray"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.qmuiteam.qmui.alpha.QMUIAlphaImageButton
                android:id="@+id/btnLeve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 />

            <TextView
                android:id="@+id/memberDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:text="永久会员"
                android:textColor="@color/qmui_config_color_gray_5"
                android:textSize="10sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/memberTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:text="有效期:永久"
            android:textColor="@color/qmui_config_color_gray_5"
            android:textSize="10sp" />
    </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout>


    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout
        android:id="@+id/layout_nologin"
        style="@style/minePageOption"
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:padding="30px"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_login" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:text="获取更多内容"
                android:textColor="@color/qmui_config_color_gray_5"
                android:textSize="14sp" />
        </LinearLayout>

    </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout>

</FrameLayout>

